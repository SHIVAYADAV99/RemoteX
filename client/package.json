{
  "name": "remote-desktop-app",
  "version": "1.0.0",
  "description": "Cross-platform remote desktop with screen sharing",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "devtools": "react-devtools",
    "build": "vite build && electron-rebuild -f -w robotjs && electron-builder",
    "build:win": "vite build && electron-rebuild -f -w robotjs && electron-builder --win",
    "build:linux": "vite build && electron-rebuild -f -w robotjs && electron-builder --linux",
    "start": "vite build && electron .",
    "server": "node signaling-server.js",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "remote-desktop",
    "screen-sharing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.remotex.app",
    "productName": "RemoteX",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "signaling-server.js"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "cscLink": null,
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "express": "^4.22.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "robotjs": "^0.6.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}